            <dd class="col-sm-10">@Html.DisplayFor(model => model.CantidadStock)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.UnidadMedida)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.UnidadMedida)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.UmbralBajoStock)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.UmbralBajoStock)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.PrecioCosto)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.PrecioCosto)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.PrecioVenta)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.PrecioVenta)</dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.IdInsumo" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
    </div>
</div>