@model ProyectoFinal_G8.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <hr />
    <h3 class="text-danger">¿Está seguro de que desea eliminar este Usuario?</h3>
    <p class="text-danger">Esta acción no se puede deshacer.</p>
    <div>
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nombre)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

            
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3">Rol Principal</dt>
            
            <dd class="col-sm-9">@(Model.Rol != null ? Model.Rol.Name : "N/A")</dd>

            
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.PhoneNumber)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Direccion)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Direccion)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar Usuario" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>