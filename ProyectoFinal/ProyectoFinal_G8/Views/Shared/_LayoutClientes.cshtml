<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Portal Propietario - Veterinaria Patitas CR</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    @* Referencias CSS (sin cambios) *@
    <link href="@Url.Content("~/assets/img/favicon.ico")" rel="icon">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="@Url.Content("~/assets/lib/owlcarousel/assets/owl.carousel.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/assets/css/style.css")" rel="stylesheet">

</head>
<body>

    @* Topbar (sin cambios) *@
    <div class="container-fluid bg-dark">
        <div class="row py-2 px-lg-5">
            <div class="col-lg-6 text-center text-lg-left mb-2 mb-lg-0">
                <div class="d-inline-flex align-items-center text-white">
                    <small><i class="fa fa-phone-alt mr-2"></i>+506 2222 3333</small>
                    <small class="px-3">|</small>
                    <small><i class="fa fa-envelope mr-2"></i>info@patitascr.com</small>
                </div>
            </div>
        </div>
    </div>

    @* Navbar - SECCIÓN MODIFICADA *@
    <div class="container-fluid p-0">
        <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-lg-5">
            <a class="navbar-brand d-flex align-items-center ml-lg-3" asp-area="" asp-controller="Propietario" asp-action="Dashboard">
                @* Asumiendo que Propietario/Dashboard es el inicio del cliente *@
                <img src="@Url.Content("~/assets/img/icono_clinica.png")" alt="Icono Clínica" class="mr-3" style="height: 60px;" />
                <h1 class="m-0 display-5 text-uppercase" style="color:#1F1F2E;">Veterinaria Patitas CR</h1>
            </a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between px-lg-3" id="navbarCollapse">
                <div class="navbar-nav m-auto py-0">
                    @* Links del Cliente *@
                    <a class="nav-item nav-link" asp-area="" asp-controller="Propietario" asp-action="Pagos">Mis Pagos</a>
                    <a class="nav-item nav-link" asp-area="" asp-controller="Notificacion" asp-action="Notificaciones">Notificaciones</a>

                    @* --- NUEVO: Enlace Mis Mascotas --- *@
                    <a class="nav-item nav-link" asp-area="" asp-controller="Mascotas" asp-action="Index">Mis Mascotas</a>
                    @* ----------------------------------- *@

                    @* --- MODIFICADO: Dropdown Citas --- *@
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Citas</a> @* Texto cambiado *@
                        <div class="dropdown-menu rounded-0 m-0">
                            <a class="dropdown-item" asp-area="" asp-controller="Citas" asp-action="Index">Ver Mis Citas</a> @* Controlador cambiado *@
                            <a class="dropdown-item" asp-area="" asp-controller="Citas" asp-action="Create">Solicitar Nueva Cita</a> @* Nuevo enlace *@
                        </div>
                    </div>
                    @* ---------------------------------- *@

                    <a class="nav-item nav-link" asp-area="" asp-controller="Propietario" asp-action="Configuracion">Configuración</a>
                </div>
                <a href="@Url.Action("Logout", "Acceso")" class="btn btn-danger py-2 px-4 d-none d-lg-block">Cerrar Sesión</a>
            </div>
        </nav>
    </div>
    @* --- FIN SECCIÓN MODIFICADA --- *@

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    @* Footer (sin cambios) *@
    <div class="container-fluid bg-dark text-white mt-5 py-5 px-sm-3 px-md-5">
        <div class="row pt-5">
            <div class="col-lg-7 col-md-6">
                <div class="row">
                    <div class="col-md-6 mb-5">
                        <h3 class="text-primary mb-4">Contacto</h3>
                        <p><i class="fa fa-map-marker-alt mr-2"></i>Dirección de Mi Clínica, Ciudad, CR</p>
                        <p><i class="fa fa-phone-alt mr-2"></i>+506 2222 3333</p>
                        <p><i class="fa fa-envelope mr-2"></i>info@patitascr.com</p>
                    </div>
                    <div class="col-md-6 mb-5">
                        <h3 class="text-primary mb-4">Accesos Rápidos</h3>
                        <div class="d-flex flex-column justify-content-start">
                            <a class="text-white mb-2" asp-area="" asp-controller="Propietario" asp-action="Dashboard"><i class="fa fa-angle-right mr-2"></i>Mi Panel</a>
                            <a class="text-white mb-2" asp-area="" asp-controller="Propietario" asp-action="Pagos"><i class="fa fa-angle-right mr-2"></i>Mis Pagos</a>
                            @* --- NUEVO: Enlace Mis Mascotas Footer --- *@
                            <a class="text-white mb-2" asp-area="" asp-controller="Mascotas" asp-action="Index"><i class="fa fa-angle-right mr-2"></i>Mis Mascotas</a>
                            @* --------------------------------------- *@
                            <a class="text-white mb-2" asp-area="" asp-controller="Citas" asp-action="Index"><i class="fa fa-angle-right mr-2"></i>Mis Citas</a> @* Controlador cambiado *@
                            <a class="text-white mb-2" asp-area="" asp-controller="Notificacion" asp-action="Notificaciones"><i class="fa fa-angle-right mr-2"></i>Notificaciones</a>
                            <a class="text-white mb-2" asp-area="" asp-controller="Propietario" asp-action="Configuracion"><i class="fa fa-angle-right mr-2"></i>Configuración</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid bg-dark text-white border-top py-4 px-sm-3 px-md-5" style="border-color: #3E3E4E !important;">
        <div class="row">
            <div class="col-lg-6 text-center text-md-left mb-3 mb-md-0">
                <p class="m-0 text-white">&copy; <a href="#">Veterinaria Patitas CR</a>. Todos los derechos reservados.</p>
            </div>
            <div class="col-lg-6 text-center text-md-right">
                <ul class="nav d-inline-flex">
                    <li class="nav-item"><a class="nav-link text-white py-0" href="#">Términos y Condiciones</a></li>
                </ul>
            </div>
        </div>
    </div>
    <a href="#" class="btn btn-lg btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>

    @* Scripts (sin cambios) *@
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="@Url.Content("~/assets/lib/easing/easing.min.js")"></script>
    <script src="@Url.Content("~/assets/lib/waypoints/waypoints.min.js")"></script>
    <script src="@Url.Content("~/assets/lib/counterup/counterup.min.js")"></script>
    <script src="@Url.Content("~/assets/lib/owlcarousel/owl.carousel.min.js")"></script>
    <script src="@Url.Content("~/assets/mail/jqBootstrapValidation.min.js")"></script>
    <script src="@Url.Content("~/assets/mail/contact.js")"></script>
    <script src="@Url.Content("~/assets/js/main.js")"></script>

    <script>
        const sessionTimeout = 5 * 60 * 1000; // 5 minutos
        let inactivityTimer;
        function resetInactivityTimer() {
            clearTimeout(inactivityTimer);
            inactivityTimer = setTimeout(logout, sessionTimeout);
        }
        function logout() {
            window.location.href = '@Url.Action("Logout", "Acceso")';
        }
        document.onmousemove = resetInactivityTimer;
        document.onkeypress = resetInactivityTimer;
        resetInactivityTimer();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>