@using Microsoft.AspNetCore.Identity
@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <title>Gestión Veterinaria - Mi Clínica</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <link href="@Url.Content("~/assets/img/favicon.ico")" rel="icon">

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <link href="@Url.Content("~/assets/lib/owlcarousel/assets/owl.carousel.min.css")" rel="stylesheet">

    @* Hoja de estilos principal de tu plantilla *@
    <link href="@Url.Content("~/assets/css/style.css")" rel="stylesheet">

    @* Hoja de estilos general de ASP.NET Core (si la usas) *@
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@

    @* Estilos específicos del Layout (si existen) *@
    @* <link rel="stylesheet" href="~/ProyectoFinal_G8.styles.css" asp-append-version="true" /> *@

</head>
<body>

    <div class="container-fluid bg-dark">
        @* ... (Tu Topbar sin cambios) ... *@
        <div class="row py-2 px-lg-5">
            <div class="col-lg-6 text-center text-lg-left mb-2 mb-lg-0">
                <div class="d-inline-flex align-items-center text-white">
                    <small><i class="fa fa-phone-alt mr-2"></i>+506 2222 3333</small>
                    <small class="px-3">|</small>
                    <small><i class="fa fa-envelope mr-2"></i>info@miclinica.com</small>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid p-0">
        <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-lg-5">

            <a class="navbar-brand d-flex align-items-center ml-lg-3" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="@Url.Content("~/assets/img/icono_clinica.png")" alt="Icono Clínica" class="mr-3" style="height: 60px;" />
                <h1 class="m-0 display-5 text-uppercase" style="color:#1F1F2E;">Clínica Veterinaria Patitas CR</h1>
            </a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-between px-lg-3" id="navbarCollapse">

                @* --- Tus enlaces de navegación principales --- *@
                <div class="navbar-nav m-auto py-0">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-item nav-link active">Inicio</a>
                    @* --- Aquí estaban tus enlaces de Acceso Propietario/Personal --- *@
                    @* --- ¡Los hemos quitado! --- *@

                    @* --- Puedes añadir aquí tus enlaces condicionales si quieres, --- *@
                    @* --- pero asegúrate que las clases CSS coincidan con tu plantilla --- *@
                    @* --- para que no rompan el estilo (nav-item nav-link, etc.) --- *@
                    @if (SignInManager.IsSignedIn(User))
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Administración
                                </a>
                                <div class="dropdown-menu rounded-0 m-0" aria-labelledby="adminDropdown">
                                    <a class="dropdown-item" asp-area="" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Rols" asp-action="Index">Roles</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-area="" asp-controller="Insumos" asp-action="Index">Insumos</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Tratamientos" asp-action="Index">Tratamientos</a>
                                </div>
                            </li>
                        }
                        @if (User.IsInRole("Admin") || User.IsInRole("Veterinario"))
                        {
                            <a class="nav-item nav-link" asp-area="" asp-controller="Citas" asp-action="Index">Citas</a>
                            <a class="nav-item nav-link" asp-area="" asp-controller="Mascotas" asp-action="Index">Mascotas</a>
                            <a class="nav-item nav-link" asp-area="" asp-controller="Facturas" asp-action="Index">Facturas</a>
                        }
                        @* Añade más enlaces condicionales si es necesario *@
                    }

                </div>

                @* --- Inserta el LoginPartial aquí, después de tus enlaces principales --- *@
                @* --- Puede que necesites ajustar clases CSS en _LoginPartial.cshtml si no se alinea bien --- *@
                <partial name="_LoginPartial" />

            </div>
        </nav>
    </div>

    <main role="main" class="pb-3">
        @* Recomiendo añadir un contenedor aquí para que el contenido no ocupe todo el ancho por defecto *@
        <div class="container-fluid py-5">
            @* Ajusta padding (py-5) como necesites *@
            @RenderBody()
        </div>
    </main>


    <div class="container-fluid bg-dark text-white mt-5 py-5 px-sm-3 px-md-5">
        @* ... (Tu Footer sin cambios) ... *@
        <div class="row pt-5">
            <div class="col-lg-7 col-md-6">
                <div class="row">
                    <div class="col-md-6 mb-5">
                        <h3 class="text-primary mb-4">Contacto</h3>
                        <p><i class="fa fa-map-marker-alt mr-2"></i>Dirección de Mi Clínica, Ciudad, CR</p>
                        <p><i class="fa fa-phone-alt mr-2"></i>+506 2222 3333</p>
                        <p><i class="fa fa-envelope mr-2"></i>info@miclinica.com</p>
                    </div>
                    <div class="col-md-6 mb-5">
                        <h3 class="text-primary mb-4">Accesos Rápidos</h3>
                        <div class="d-flex flex-column justify-content-start">
                            <a class="text-white mb-2" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-angle-right mr-2"></i>Inicio</a>
                            @* QUITAR este enlace si ya usas _LoginPartial
                             <a class="text-white mb-2" asp-area="" asp-controller="Acceso" asp-action="InicioSesionUsuario"><i class="fa fa-angle-right mr-2"></i>Acceso Personal</a>
                             *@
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 col-md-6 mb-5">
                <h3 class="text-primary mb-4">Horario de Atención</h3>
                <p><i class="fa fa-clock mr-2"></i> Lunes a Viernes: 8:00 AM - 6:00 PM</p>
                <p><i class="fa fa-clock mr-2"></i> Sábados: 9:00 AM - 1:00 PM</p>
                <p><i class="far fa-clock mr-2"></i> Domingos: Cerrado</p>
            </div>
        </div>
    </div>
    <div class="container-fluid bg-dark text-white border-top py-4 px-sm-3 px-md-5" style="border-color: #3E3E4E !important;">
        @* ... (Tu Copyright/Footer links sin cambios) ... *@
        <div class="row">
            <div class="col-lg-6 text-center text-md-left mb-3 mb-md-0">
                <p class="m-0 text-white">
                    &copy; <a href="#">Clínica Veterinaria Patitas CR</a>. Todos los derechos reservados.
                </p>
            </div>
            <div class="col-lg-6 text-center text-md-right">
                <ul class="nav d-inline-flex">
                    <li class="nav-item">
                        <a class="nav-link text-white py-0" href="#">Términos y Condiciones</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <a href="#" class="btn btn-lg btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>


    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    @* Scripts de tu plantilla *@
    <script src="@Url.Content("~/assets/lib/easing/easing.min.js")"></script>
    <script src="@Url.Content("~/assets/lib/waypoints/waypoints.min.js")"></script>
    <script src="@Url.Content("~/assets/lib/counterup/counterup.min.js")"></script>
    <script src="@Url.Content("~/assets/lib/owlcarousel/owl.carousel.min.js")"></script>
    @* <script src="@Url.Content("~/assets/mail/jqBootstrapValidation.min.js")"></script> *@ @* Probablemente no lo necesites si usas validación de .NET *@
    @* <script src="@Url.Content("~/assets/mail/contact.js")"></script> *@ @* Probablemente no lo necesites *@
    <script src="@Url.Content("~/assets/js/main.js")"></script>

    @* Scripts necesarios para validación de ASP.NET Core *@
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    @* Scripts generales de tu sitio (si tienes uno) *@
    @* <script src="~/js/site.js" asp-append-version="true"></script> *@

    @* Sección para scripts específicos de cada página *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>