@model IEnumerable<ProyectoFinal_G8.Models.Cita>

@{
    ViewData["Title"] = "Citas";
}

<div class="container mt-4">
    <h1>Citas</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Crear Nueva Cita</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.FechaHora)</th>
                <th>@Html.DisplayNameFor(model => model.Mascota)</th>
                <th>@Html.DisplayNameFor(model => model.Veterinario)</th>
                <th>@Html.DisplayNameFor(model => model.Motivo)</th>
                <th>@Html.DisplayNameFor(model => model.Estado)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FechaHora)</td>
                    <td>@Html.DisplayFor(modelItem => item.Mascota.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Veterinario.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Motivo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdCita" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.IdCita" class="btn btn-sm btn-info">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.IdCita" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>