@model IEnumerable<ProyectoFinal_G8.Models.Rol>

@{
    ViewData["Title"] = "Roles";
}

<div class="container mt-4">
    <h1>Roles</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Crear Nuevo Rol</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.NombreRol)</th>
                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NombreRol)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdRol" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.IdRol" class="btn btn-sm btn-info">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.IdRol" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>