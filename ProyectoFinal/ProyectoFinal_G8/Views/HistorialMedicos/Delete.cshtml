@model ProyectoFinal_G8.Models.HistorialMedico

@{
    ViewData["Title"] = "Eliminar Registro Historial Médico";
}

<div class="container mt-4">
    <h1>Eliminar Registro Historial Médico</h1>

    <h3>¿Está seguro de que desea eliminar esto?</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.FechaRegistro)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.FechaRegistro)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Mascota)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Mascota.Nombre)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Descripcion)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Descripcion)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Tratamiento)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Tratamiento)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Notas)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Notas)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdHistorial" />
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
        </form>
    </div>
</div>