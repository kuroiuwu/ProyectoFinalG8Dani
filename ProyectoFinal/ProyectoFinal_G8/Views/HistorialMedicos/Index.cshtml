@model IEnumerable<ProyectoFinal_G8.Models.HistorialMedico>
@using Microsoft.AspNetCore.Identity
@using ProyectoFinal_G8.Models 
@inject UserManager<Usuario> UserManager 

@{
    ViewData["Title"] = ViewData["TituloHistorial"]?.ToString() ?? "Historial Médico";
    // Recuperar ID pasado desde el controller (como en tu ejemplo Citas)
    var currentUserID = ViewData["CurrentUserID"] != null ? (int)ViewData["CurrentUserID"] : 0;
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    @* Mensajes TempData *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    @* Botón Crear: Solo para Admin/Veterinario *@
    @if (User.IsInRole("Admin") || User.IsInRole("Veterinario"))
    {
        <p>
            @{
                var createRouteValues = new Dictionary<string, string>();
                if (ViewData["MascotaIdFiltrada"] != null) { createRouteValues.Add("mascotaId", ViewData["MascotaIdFiltrada"].ToString()); }
            }
            <a asp-action="Create" asp-all-route-data="createRouteValues" class="btn btn-primary"><i class="fas fa-plus mr-1"></i> Crear Nuevo Registro</a>
        </p>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            @(User.IsInRole("Cliente") ? "No hay registros en el historial médico para esta mascota." : ViewData["MascotaIdFiltrada"] != null ? "No hay registros para esta mascota." : "No hay registros en el historial médico.")
        </div>
    }
    else
    {
        <div class="table-responsive">
            @* Añadido para móviles *@
            <table class="table table-striped table-bordered table-hover">
                @* Añadido hover *@
                <thead class="thead-light">
                    @* Mejor contraste encabezado *@
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().FechaRegistro)</th>
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Mascota.Nombre)</th>
                        @* Mostrar Dueño solo si es Admin/Vet y no estamos filtrando por mascota (o decidir si mostrar siempre) *@
                        @if ((User.IsInRole("Admin") || User.IsInRole("Veterinario")) && ViewData["MascotaIdFiltrada"] == null)
                        {
                            <th>Dueño</th>
                        }
                        <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Descripcion)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FechaRegistro.ToString("g")</td> @* Formato corto *@
                            <td>
                                @* Enlace al detalle de la mascota *@
                                <a asp-controller="Mascotas" asp-action="Details" asp-route-id="@item.IdMascota">
                                    @Html.DisplayFor(modelItem => item.Mascota.Nombre)
                                </a>
                            </td>
                            @if ((User.IsInRole("Admin") || User.IsInRole("Veterinario")) && ViewData["MascotaIdFiltrada"] == null)
                            {
                                <td>@(item.Mascota?.Dueño?.Nombre ?? "N/A")</td> @* Asume navegación Dueño en Mascota *@
                            }
                            <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                            <td>
                                <div class="btn-group" role="group">
                                    @* Agrupar botones *@
                                    @* Botón Editar: Solo Admin/Vet *@
                                    @if (User.IsInRole("Admin") || User.IsInRole("Veterinario"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.IdHistorial" class="btn btn-sm btn-warning" title="Editar"><i class="fas fa-pencil-alt"></i></a>
                                    }
                                    @* Botón Detalles: Siempre visible para roles autorizados *@
                                    <a asp-action="Details" asp-route-id="@item.IdHistorial" class="btn btn-sm btn-info" title="Detalles"><i class="fas fa-info-circle"></i></a>
                                    @* Botón Eliminar: Solo Admin/Vet *@
                                    @if (User.IsInRole("Admin") || User.IsInRole("Veterinario"))
                                    {
                                        <a asp-action="Delete" asp-route-id="@item.IdHistorial" class="btn btn-sm btn-danger" title="Eliminar"><i class="fas fa-trash-alt"></i></a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-3">
        <a asp-controller="Mascotas" asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left mr-1"></i> Volver a Mascotas</a>
    </div>
</div>

@section Scripts {
    <script>
        // Script para cerrar alerts de Bootstrap 5 (si lo usas)
        var alertList = document.querySelectorAll('.alert');
        alertList.forEach(function (alert) {
          new bootstrap.Alert(alert);
        });
    </script>
}