@model ProyectoFinal_G8.Models.Factura

@{
    ViewData["Title"] = "Crear Factura";
}

<div class="container mt-4">
    <h1>Crear Factura</h1>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="FechaEmision" class="form-label"></label>
                    <input asp-for="FechaEmision" class="form-control" />
                    <span asp-validation-for="FechaEmision" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="IdUsuarioCliente" class="form-label"></label>
                    <select asp-for="IdUsuarioCliente" class="form-select" asp-items="ViewBag.IdUsuarioCliente"></select>
                </div>
                <div class="mb-3">
                    <label asp-for="MontoTotal" class="form-label"></label>
                    <input asp-for="MontoTotal" class="form-control" />
                    <span asp-validation-for="MontoTotal" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Estado" class="form-label"></label>
                    <input asp-for="Estado" class="form-control" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}